//tsconfig.json

{
  "compilerOptions": {
    // Enable experimental support for TypeScript decorators
    "experimentalDecorators": true,

    // Skip type checking of declaration files (*.d.ts)
    "skipLibCheck": true,

    // Specify the ECMAScript target version (ES6 in this case)
    // "target": "ES2022",

    // Specify the module system for generated code (CommonJS for Node.js)
    // "module": "Node16",

    // Specify how module resolution should be done (Node.js-style resolution)
    "moduleResolution": "Node16",

    // Allow JavaScript files to be included in the TypeScript project
    "allowJs": true,

    // Enable importing JSON modules directly in TypeScript files
    "resolveJsonModule": true,

    // Allow using CommonJS-style imports in ES6 modules
    "esModuleInterop": true,

    // Specify the output directory for compiled JavaScript files
    "outDir": "./build",

    // Specify the root directory of TypeScript source files
    "rootDir": "src"
  },
  // Specify the files or patterns to include in the compilation
  "include": ["./src/**/*", "env.d.ts"],

  // Specify the files or patterns to exclude from the compilation
  "exclude": ["node_modules"],

  "extends": "@tsconfig/node22/tsconfig.json",

  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",       
  }
}
